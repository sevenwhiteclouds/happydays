<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_recycle_view_constraint_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:id="@+id/cart_recycle_view_relative_layout_child"
        android:layout_width="381dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cart_recycle_view_relative_layout_item_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/beverages" />

        <TextView
            android:id="@+id/cart_recycle_view_relative_layout_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="78dp"
            android:layout_toStartOf="@+id/cart_recycle_view_amount_in_cart"
            android:layout_toEndOf="@+id/cart_recycle_view_relative_layout_item_image"
            android:gravity="top"
            android:text="Don Julio 1942"
            android:textColor="@color/third"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_recycle_view_relative_layout_item_denomination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_recycle_view_relative_layout_item_name"
            android:layout_marginStart="13dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/cart_recycle_view_relative_layout_item_image"
            android:text="1 Gal"
            android:textColor="#A6102A68"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_recycle_view_relative_layout_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_recycle_view_relative_layout_item_denomination"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/cart_recycle_view_relative_layout_item_image"
            android:gravity="bottom|end"
            android:text="$5.99"
            android:textColor="#A6102A68"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_recycle_view_relative_layout_item_add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/ic_round_add_circle_24"
            app:tint="@color/secondary" />

        <TextView
            android:id="@+id/cart_recycle_view_amount_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_recycle_view_relative_layout_item_add_button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="11dp"
            android:text="2"
            android:textColor="@color/third"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_recycle_view_relative_layout_item_remove_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/cart_recycle_view_amount_in_cart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/ic_baseline_remove_circle_24"
            app:tint="@color/secondary" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>