<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/recycle_view_layout"
        android:layout_width="181dp"
        android:layout_height="185dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recycle_item_picture"
            android:layout_width="79dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="44dp"
            app:srcCompat="@drawable/bread" />

        <TextView
            android:id="@+id/recycle_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="58dp"
            android:text="Item Name"
            android:textColor="#102A68"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycle_item_denomination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="34dp"
            android:text="1 Item"
            android:textColor="#A6102A68"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycle_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="$5.75"
            android:textColor="@color/main"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recycle_item_add_button"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_round_add_circle_24"
            app:tint="@color/secondary" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>